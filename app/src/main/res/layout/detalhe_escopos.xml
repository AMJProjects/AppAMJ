<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_escopos"
    android:padding="16dp">

    <!-- Botão de Navegação Superior -->
    <ImageButton
        android:id="@+id/voltarEscopo"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#4C0000"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/setinha_branca" />

    <!-- Texto Detalhes -->
    <TextView
        android:id="@+id/textViewDetalhes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9D9D9"
        android:layout_marginTop="60dp"
        android:layout_below="@id/voltarEscopo"
        android:padding="10dp"
        android:text="Detalhes do Escopo"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!-- Botão Voltar ao Menu Fixado no Final -->
    <Button
        android:id="@+id/btnVoltarMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#8D0000"
        android:text="Voltar ao Menu"
        android:textColor="@color/white" />

</RelativeLayout>
