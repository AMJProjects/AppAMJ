<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_perfil">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="72dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_perfil" />


    <EditText
        android:id="@+id/etNome"
        android:layout_width="242dp"
        android:layout_height="53dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#ADADAD"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etCargo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_foto"
        app:layout_constraintVertical_bias="0.5" />

    <EditText
        android:id="@+id/etCargo"
        android:layout_width="242dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#ADADAD"
        android:ems="10"
        android:hint="Cargo"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#211F1F"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="231dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#530303"
        android:text="Salvar mudanÃ§as"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCargo"
        app:layout_constraintVertical_bias="0.382"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_foto"
        android:layout_width="136dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/botaoredondo"
        android:backgroundTint="#530303"
        android:text="Alterar foto"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/etNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>